<li class="basket__item basket-card js-basket-card" data-id-{{id}}>
  <button class="btn-close btn-close--basket-card"  type="button" data-btn-delete-item>
    &#x2716
  </button>

  <div class="basket-card__title-wrapper">
    <div class="basket-card__picture-wrapper">
      <picture>
        <source
          srcset='{{urlSmWebp}} 1x, {{urlSmWebp2x}} 2x'
          type='image/webp'/>
        <source
          srcset='{{urlSm}} 1x, {{urlSm2x}} 2x'
          type='image/jpg'/>
        <img class="image basket-card__image" src={{urlSm}}
          alt={{title}} width="100" height="83" loading="lazy">
      </picture>
    </div>
    <h3 class="basket-card__title">{{title}}</h3>
  </div>

  <div class="basket-card__counter-wrapper">
    <div class="counter">
      <button class="counter__button" type="button" data-decrement> &#8211 </button>
        <label class="counter__label">
          <input type="number" class="counter__input" step="1" min="1" max="20" maxlength="2" id="num_count"
            name="quantity" value="1" readonly data-counter></input>
        </label>
      <button class="counter__button" type="button" data-increment> &#43 </button>
    </div>

    <label class="basket-card__price-label">
      <input type="number" class="basket-card__price-input" value="{{price}}" readonly></input>
      грн
    </label>
  </div>
</li>