<li class="basket__item basket-card js-basket-card">
  <div class="basket-card__title-wrapper">
    <div class="basket-card__picture-wrapper">
      <picture>
        <source
          srcset='{{urlSmWebp}} 1x, {{urlSmWebp2x}} 2x'
          type='image/webp'/>
        <source
          srcset='{{urlSm}} 1x, {{urlSm2x}} 2x'
          type='image/jpg'/>
        <img class="image basket-card__image" src={{urlSm}}
          alt={{title}} width="100" height="83" loading="lazy">
      </picture>
    </div>
    <h3 class="basket-card__title">{{title}}</h3>
  </div>
  <div class="basket-card__counter-wrapper">
    <div class="counter">
      <button class="counter__button" type="button" data-increment> &#8211 </button>
        <label class="counter__label">
          <input type="number" class="counter__input" step="1" min="1" max="20" maxlength="2" id="num_count"
            name="quantity" value="1" data-counter></input>
        </label>
      <button class="counter__button" type="button" data-decrement> &#43 </button>
    </div>
    <p class="basket-card__price">{{price}} грн</p>
  </div>
</li>